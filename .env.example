API_KEY=your_super_secret_key_here
UPLOAD_DIR=uploads
DB_PATH=images.db
WORKERS=4
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Google Drive Backup (Optional)
# Choose authentication method: oauth (recommended) or service_account
GOOGLE_DRIVE_AUTH_METHOD=oauth

# OAuth Method (Recommended - uses your personal Google Drive)
GOOGLE_DRIVE_CREDENTIALS=google-oauth-client.json

# Service Account Method (For Shared Drives - may have quota limits)
# GOOGLE_DRIVE_CREDENTIALS=google-credentials.json

# Optional: Specific folder ID for backups (auto-creates if not set)
GOOGLE_DRIVE_FOLDER_ID=